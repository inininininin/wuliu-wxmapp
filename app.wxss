button::after{
  border: none;
}

.pageLoading{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  opacity: 1;
  background: #e5e5e5;
  /* background: rgba(0,0,0,0.5); */
  z-index: 3;
}


/* 闪动动效 */
@keyframes twinkle {
  0%{
      opacity:.0.8;
  }
  100%{
      opacity:0;
  }
}

.placeholder{
