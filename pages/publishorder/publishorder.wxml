<view class="xxrequire">
	<view class="xxrequireItem">
		<text>箱型</text>
		<view>
			<picker bindchange="xxrequire" value="{{index1}}" range="{{array1}}">
				<view class="picker" wx:if='{{index1==0}}' style="color:#999999">
					{{array1[index1]}}
				</view>
				<view class="picker" wx:if='{{index1!=0}}' style="color:#333333">
					{{array1[index1]}}
				</view>
			</picker>
			<image src="../img/xiala.svg"></image>
		</view>
	</view>
	<view class="xxrequireItem">
		<text>功能</text>
		<view>
			<picker bindchange="gnrequire" value="{{index2}}" range="{{array2}}">
				<view class="picker" wx:if='{{index2==0}}' style="color:#999999">
					{{array2[index2]}}
				</view>
				<view class="picker" wx:if='{{index2!=0}}' style="color:#333333">
					{{array2[index2]}}
				</view>
			</picker>
			<image src="../img/xiala.svg"></image>
		</view>
	</view>
	<view class="xxrequireItem">
		<text>箱数</text>
		<view>
			<view class="xxrequireItemEve">
				<picker bindchange="xsrequire" value="{{index3}}" range="{{array3}}">
					<view class="picker" wx:if='{{index3==0}}' style="color:#999999">
						{{array3[index3]}}
					</view>
					<view class="picker" wx:if='{{index3!=0}}' style="color:#333333">
						{{array3[index3]}}
					</view>
				</picker>
				<image src="../img/xiala.svg"></image>
			</view>
			<view  class="xxrequireItemEve">
				<input type="number" placeholder="请输入数量"></input>
				<text>个</text>
			</view>

		</view>
	</view>
</view>
<!-- 备注信息 -->
<view class="remark">
	<text>备注信息</text>
	<input placeholder-class="" placeholder="填写个性需求及需注意因素"></input>
</view>

<view class="send" bindtap="send">发布</view>