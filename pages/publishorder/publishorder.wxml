<!--pages/publishorder/publishorder.wxml-->
<view class="publishAddress">
	<view class="faaddress">
		<image src="../img/fa.svg"></image>
		<view>
			<view>
				<picker class="orderSelcet" wx:if='{{picker}}' mode="region" style="color:#999" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
					<view class="picker">
						{{region[0]}}{{region[1]}}{{region[2]}}
					</view>
				</picker>
				<picker class="orderSelcet" wx:if='{{!picker}}' mode="region" style="color:#333" bindchange="faaddress1" value="{{region}}" custom-item="{{customItem}}">
					<view class="picker">
						{{region[0]}}，{{region[1]}}，{{region[2]}}
					</view>
				</picker>
			</view>
			<view>
				<input class="faaddress2" placeholder-class="placeholder" placeholder="详细地址（详细到门牌、街道）" bindinput="faaddress2" value="{{faaddress2}}"></input>
			</view>
		</view>
	</view>
	<view class="fadate">
		<image src="../img/date.svg"></image>
		<view class="fadateThis">
			<picker mode="date" value="{{date}}" style="color:{{colorTime}}" start="2015-09-01" end="2050-09-01" bindchange="bindDateChange">
				<view class="picker">
					{{date}}
				</view>
			</picker>
		</view>
	</view>
</view>
<!-- 收货地址 -->
<view class="getaddressList" wx:for='{{getAddressList}}'>
	<view class="getaddressItem">
		<view class="faaddress">
			<image src="../img/shou.svg"></image>
			<view>
				<view>
					<picker class="orderSelcet" wx:if='{{picker}}' mode="region" style="color:#999" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
						<view class="picker">
							{{region[0]}}{{region[1]}}{{region[2]}}
						</view>
					</picker>
					<picker class="orderSelcet" wx:if='{{!picker}}' mode="region" style="color:#333" bindchange="faaddress1" value="{{region}}" custom-item="{{customItem}}">
						<view class="picker">
							{{region[0]}}，{{region[1]}}，{{region[2]}}
						</view>
					</picker>

					<text class="addNewaddress">添加地址</text>
				</view>
				<view>
					<input class="faaddress2" placeholder-class="placeholder" placeholder="详细地址（详细到门牌、街道）" bindinput="faaddress2" value="{{faaddress2}}"></input>
				</view>
			</view>
		</view>
		<view class="fadate">
			<image src="../img/riqi2.svg"></image>
			<view class="fadateThis">
				<picker mode="date" value="{{date}}" style="color:{{colorTime}}" start="2015-09-01" end="2050-09-01" bindchange="bindDateChange">
					<view class="picker">
						{{date}}
					</view>
				</picker>
			</view>
		</view>
		<view class="zhongliang">
			<image src="../img/zhongliang.svg"></image>
			<view class="zhongliangView">
				<input placeholder-class="placeholder" placeholder="请输入货物重量"></input>
				<text>;</text>
				<input placeholder-class="placeholder" placeholder="请输入货物体积"></input>
			</view>
		</view>
	</view>
</view>

<!-- 货物详情 -->
<view class="shopDetail">
	<view class="shopDetailItem">
		<text>货物类型</text>
		<input placeholder="如证件、服装等" placeholder-class="placeholder"></input>
	</view>
	<view class="shopDetailItem">
		<text>货物重量</text>
		<view class="shopItem">
			<input placeholder="如230g等" placeholder-class="placeholder"></input>
			<text>货物体积</text>
			<input placeholder="如5L等" placeholder-class="placeholder"></input>
		</view>
	</view>
	<view class="shopDetailItem">
		<text>包装方式</text>
		<input style="border-bottom:0" placeholder="如纸箱、木箱等" placeholder-class="placeholder"></input>
	</view>
</view>
