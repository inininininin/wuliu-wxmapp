/* pages/orderList/orderList.wxss */
@import '../common/common.wxss';
page{
  background: #f5f5f5;
}
.searchBox{
  width: 750rpx;
height: 88rpx;
background: #ffffff;
position: fixed;
left: 0;
}
/* 下拉框 */

.select_box {
  background: #fff;
  width: 245rpx !important;
  /* margin: 0 auto; */
  height: 88rpx;
  line-height: 88rpx;
  text-align: left;
  float: left;
  /* border:1rpx solid rgb(43, 119, 239); */
  position: relative;
  margin-left: 252rpx;
  color: #0E4090;
}

.select {
  box-sizing: border-box;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  /* padding: 0 20rpx; */
  color: #0E4090;
}

.select_text {
  width: 200rpx;
  font-size: 30rpx;
font-family: PingFangSC, PingFangSC-Regular;
font-weight: 400;
text-align: right;
text-align: center;
color: #0e4090;
  /* flex: 1; */
  /* color: rgb(102, 102, 102); */
  line-height: 60rpx;
  height: 60rpx;
  color: #0E4090;
}

.select_img {
  width: 16rpx !important;
  height: 10rpx !important;
  /* display: block; */
  transition: transform 0.3s;
  position: absolute;
  right: 15rpx;
  /* margin-left: -50rpx; *//* margin-top: 0 !important; */
}

.select_img_rotate {
  transform: rotate(180deg);
}

.option_box {
  position: absolute;
  top: 88rpx;
width: 425rpx;
  /* border-top: 0; */
  border-bottom: 0;
  border-top: none;
  /* border: 1px solid #efefef; */
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  background: #fff;
  transition: height 0.3s;
  z-index: 100;
  border-radius: 6px;
box-shadow: 2rpx 8rpx 16rpx 0rpx rgba(0,0,0,0.1); 
  text-align: center;
  left: -90rpx;
border: 0;
}

.option {
  display: block;
  font-size: 30rpx;
  line-height: 80rpx;
  /* border-bottom: 1px solid #efefef; *//* padding: 10rpx; */
  color: #333333;
}

.option::selection {
  color: rgb(43, 119, 239);
}

.screen{
  width: 120rpx;
height: 46rpx;
float: right;
background: #0e4090;
border-radius: 23rpx;
margin: 21rpx 24rpx;
text-align: center;
line-height: 46rpx;
color: #fff;
font-size: 26rpx;
}
/* 列表 */
.orderList{
  margin-top: 108rpx;
  padding-bottom: 20rpx;
}
.orderItem{
  width: 750rpx;
height: 319rpx;
margin-top: 20rpx;
background: #ffffff;
}
.orderItemOne{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}
.orderItemOne>text:first-child{
  max-width: 450rpx;
font-size: 28rpx;
font-family: PingFangSC, PingFangSC-Regular;
font-weight: 400;
text-align: left;
color: #666666;
float: left;
margin-left: 24rpx;
}
.orderItemOne>text:last-child{
font-size: 24rpx;
font-family: PingFangSC, PingFangSC-Regular;
font-weight: 400;
text-align: right;
float: right;
margin-right: 24rpx;
color: #0e4090;
}
.orderItemTwo{
  width: 702rpx;
  margin: 0 24rpx;
  height: 157rpx;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
}
.orderItemThree{
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
font-size: 28rpx;
font-family: PingFangSC, PingFangSC-Regular;
font-weight: 400;
text-align: left;
color: #666666;
box-sizing: border-box;
padding:0 24rpx;
color: #666666;
font-size: 28rpx;
}
.orderItemTwo>view:nth-child(1){
  width:550rpx;
  display: inline-block;
  float: left;
}
.toPrice{
  width: 140rpx;
height: 50rpx;
background: #ff932e;
border-radius: 25rpx;
font-size: 28rpx;
line-height: 50rpx;
float: right;
margin: 54rpx 0;
text-align: center;
color: #ffffff;
}
.fahuo{
  margin-top: 20rpx;
}
.fahuo,.shouhuo{
  width: 100%;
  height: 44rpx;
  line-height: 44rpx;
  color: #333333;
  font-size: 28rpx;
}
.fashou{
  width: 35rpx;
  height: 44rpx;
  float: left;
  margin-right: 30rpx;
}
.pointLine{
  height: 29rpx;
  width: 100rpx;
  margin-left: 17rpx;
  border-left: 2rpx dashed #0e4090;
}
/* 筛选弹窗 */
.screenView{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  z-index: 2222;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}
.screenUserView{
  width: 626rpx;
  height: 100%;
  margin-left: 124rpx;
  background: #ffffff;
}
.title{
  display: block;
height: 40rpx;
font-size: 28rpx;
font-family: PingFangSC, PingFangSC-Regular;
font-weight: 400;
text-align: left;
color: #333333;
line-height: 40rpx;
letter-spacing: 0rpx;

margin: 0 0 20rpx 40rpx;
}
.orderSelcet{
  width: 546rpx;
height: 60rpx;
background: #ffe1be;
border-radius: 30rpx;
font-size: 26rpx;
color: #333333;
line-height: 60rpx;
text-align: center;
margin: 0 40rpx 50rpx;
}
.screenbtn{
  width: 320rpx;
  height: 60rpx;
  position: fixed;
  right: 40rpx;
  bottom: 60rpx;
}
.selectAgain{
  width: 160rpx;
  height: 60rpx;
  background: #0e4090;
border-radius: 100rpx 0px 0px 100rpx;
font-size: 26rpx;
color: #ffffff;
line-height: 60rpx;
text-align: center;
display: inline-block;
}
.makesure{
  display: inline-block;
  width: 160rpx;
height: 60rpx;
background: #ff951b;
border-radius: 0px 100rpx 100rpx 0px;
line-height: 60rpx;
color: #ffffff;
font-size: 26rpx;
text-align: center;
}

.totalCount{
  font-size: 26rpx;
  color: #999999;
  padding: 20rpx 0;
  width: 100%;
  text-align: center;
  /* margin: 10rpx 0; */
}
.title-bar view text{
  width: auto !important;
}