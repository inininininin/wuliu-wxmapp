/* pages/mine/mine.wxss */
@import '../common/common.wxss';

page {
  background: #f5f5f5;
}

.indexTitle {
  width: 750rpx;
  height: 306rpx;
  background: #0e4090;
}

.indexTitle>image {
  width: 116rpx;
  height: 116rpx;
  background: #ffffff;
  margin: 90rpx 317rpx 0;
  border-radius: 50%;
}
.indexTitle>text{
  display: block;
  width: 100%;
  text-align: center;
height: 50rpx;
font-size: 36rpx;
font-family: PingFangSC, PingFangSC-Regular;
font-weight: 400;
color: #ffffff;
line-height: 50rpx;
}
.linkList{
  width: 100%;
  background: #ffffff;
  margin-top: 20rpx;
  height: auto;
}
.linkList>view{
  width: 718rpx;
  height: 104rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e5e5e5;
  line-height: 104rpx;
  margin-left: 32rpx;
  
}
.linkList>view text{
  font-size: 34rpx;
font-family: PingFangSC, PingFangSC-Regular;
font-weight: 400;
text-align: left;
color: #333333;
letter-spacing: 1rpx;
}
.linkList>view image{
  width: 16rpx;
  height: 26rpx;
  float: right;
  margin: 39rpx 36rpx 39rpx 0;
}
.linkList>view:last-child{
  border-bottom: 0;
}