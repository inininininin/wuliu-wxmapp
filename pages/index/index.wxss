/* page/index/index.wxss */
@import '../common/common.wxss';
/* @import '../../../all/all.wxss'; */
page{
  background: #f5f5f5;
  padding-bottom: 120rpx;
}
.adPic{
  width: 702rpx;
height: 277rpx;
margin:20rpx 24rpx;
}
.orderAndPrice{
  width: 100%;
  height: 128rpx;
}
.orderAndPrice>view{
  display: inline-block;
  width: 339rpx;
  height: 128rpx;
  background: #ffffff;
  border-radius: 4rpx;
  margin-left: 24rpx;
  line-height: 128rpx;
  text-align: center;
}
.fahuo{
  width: 43rpx;
  height: 40rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}
.baojia{
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}
.articleBox{
  width: 702rpx;
  height: auto;
  background: #ffffff;
  margin: 20rpx 24rpx;
}
.articleBox .title{
  height: 73rpx;
  width: 100%;
}
.articleBox .title image{
  width: 28rpx;
  height: 29rpx;
  float: left;
  margin: 32rpx 12rpx 0 24rpx;
}
.articleBox .title text{
height: 45rpx;
font-size: 32rpx;
font-family: PingFangSC, PingFangSC-Medium;
font-weight: 500;
text-align: center;
color: #333333;
line-height: 45rpx;
margin-top: 24rpx;
float: left;
}

.articleEve{
  width: 654rpx;
  margin: 20rpx 24rpx 0; 
  height: 180rpx;
  border-bottom: 1rpx solid #d8d8d8;
}
.articleList>view:last-child{
  border-bottom: 0;
}
.articleLf{
  width: 416rpx;
  height: 180rpx;
  float: left;
}
.articleLf>view:nth-child(1){
  width: 416rpx;
height: 80rpx;
font-size: 28rpx;
font-family: PingFangSC, PingFangSC-Regular;
font-weight: 400;
text-align: left;
color: #333333;
line-height: 40rpx;
}
.articleLf>view:nth-child(2){
height: 33rpx;
font-size: 24rpx;
font-family: PingFangSC, PingFangSC-Regular;
font-weight: 400;
text-align: left;
color: #999999;
line-height: 33rpx;
margin-top: 47rpx;
}
.articleLf>view:nth-child(2)>image{
  width: 22rpx;
  height: 22rpx;
  margin-right: 10rpx;
}
.articleEve>image{
  float: left;
  width: 216rpx;
height: 160rpx;
margin-left: 22rpx;
}