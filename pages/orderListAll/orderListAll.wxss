/* pages/orderList/orderList.wxss */

page {
  background: #f5f5f5;
}

.searchBox {
  width: 750rpx;
  height: 88rpx;
  background: #ffffff;
  position: fixed;
  left: 0;
  top: 0;
}

/* 二层次导航栏 */
.navbar {
  position: fixed;
  height: 88rpx;
  width: 750rpx;
}

.navbar>view.active {
  color: #FF932E;
  font-size: 30rpx;
  line-height: 88rpx;
  height: 88rpx;
}

.navbar>view {
  position: relative;
  width: 250rpx;
  /* width: 375rpx; */
  text-align: center;
  line-height: 88rpx;
  height: 88rpx;
  font-size: 30rpx;
  color: #333;
  display: inline-block;
  flex: auto;
}

.navbar>view.active:after {
  content: "";
  display: block;
  position: absolute;
  top: 82rpx;
  border-radius: 3rpx;
  left: 85rpx;
  width: 80rpx;
  height: 6rpx;
  background: #FF932E;
  /* background: linear-gradient(to right, #ed2828, rgba(247, 81, 120, 0)); */
}

/* 列表 */
.orderList {
  margin-top: 108rpx;
  padding-bottom: 20rpx;
}

.orderItem {
  width: 750rpx;
  height: 319rpx;
  margin-top: 20rpx;
  background: #ffffff;
}

.orderItemOne {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}

.orderItemOne>text:first-child {
  font-size: 28rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #666666;
  float: left;
  margin-left: 24rpx;
}

.orderItemOne>text:last-child {
  font-size: 24rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: right;
  float: right;
  margin-right: 24rpx;
  color: #0e4090;
}

.orderItemTwo {
  width: 702rpx;
  margin: 0 24rpx;
  height: 157rpx;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
}

.orderItemThree {
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
  font-size: 28rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #666666;
  box-sizing: border-box;
  padding: 0 24rpx;
  color: #666666;
  font-size: 28rpx;
}

.orderItemTwo>view:nth-child(1) {
  width: 550rpx;
  display: inline-block;
  float: left;
}

.toChoice {
  width: 140rpx;
  height: 50rpx;
  background: #ff932e;
  border-radius: 25rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  float: right;
  margin: 54rpx 0;
  text-align: center;
  color: #ffffff;
}

.fahuo {
  margin-top: 20rpx;
}

.fahuo,
.shouhuo {
  width: 100%;
  height: 44rpx;
  line-height: 44rpx;
  color: #333333;
  font-size: 28rpx;
}

.fashou {
  width: 35rpx;
  height: 44rpx;
  float: left;
  margin-right: 30rpx;
}

.pointLine {
  height: 29rpx;
  width: 100rpx;
  margin-left: 17rpx;
  border-left: 2rpx dashed #0e4090;
}

/* 筛选弹窗 */
.screenView {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 2222;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}

.screenUserView {
  width: 626rpx;
  height: 100%;
  margin-left: 124rpx;
  background: #ffffff;
}

.title {
  display: block;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
  line-height: 40rpx;
  letter-spacing: 0rpx;

  margin: 0 0 20rpx 40rpx;
}

.orderSelcet {
  width: 546rpx;
  height: 60rpx;
  background: #ffe1be;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #333333;
  line-height: 60rpx;
  text-align: center;
  margin: 0 40rpx 50rpx;
}

.screenbtn {
  width: 320rpx;
  height: 60rpx;
  position: fixed;
  right: 40rpx;
  bottom: 60rpx;
}

.selectAgain {
  width: 160rpx;
  height: 60rpx;
  background: #0e4090;
  border-radius: 100rpx 0px 0px 100rpx;
  font-size: 26rpx;
  color: #ffffff;
  line-height: 60rpx;
  text-align: center;
  display: inline-block;
}

.makesure {
  display: inline-block;
  width: 160rpx;
  height: 60rpx;
  background: #ff951b;
  border-radius: 0px 100rpx 100rpx 0px;
  line-height: 60rpx;
  color: #ffffff;
  font-size: 26rpx;
  text-align: center;
}