/* page/index/index.wxss */
@import '../common/common.wxss';
page {
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.adPic {
  width: 702rpx;
  height: 277rpx;
  margin: 20rpx 24rpx;
}

.orderAndPrice {
  width: 100%;
  height: 128rpx;
}

.orderAndPrice>view {
  display: inline-block;
  width: 339rpx;
  height: 128rpx;
  background: #ffffff;
  border-radius: 4rpx;
  margin-left: 24rpx;
  line-height: 128rpx;
  text-align: center;
}

.fahuo {
  width: 43rpx;
  height: 40rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}

.baojia {
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}

.articleBox {
  width: 702rpx;
  height: auto;
  background: #ffffff;
  margin: 20rpx 24rpx;
}

.articleBox .title {
  height: 73rpx;
  width: 100%;
}

.articleBox .title image {
  width: 28rpx;
  height: 29rpx;
  float: left;
  margin: 32rpx 12rpx 0 24rpx;
}

.articleBox .title text {
  height: 45rpx;
  font-size: 32rpx;
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: 500;
  text-align: center;
  color: #333333;
  line-height: 45rpx;
  margin-top: 24rpx;
  float: left;
}

.articleEve {
  background: #ffffff;
  width: 702rpx;
  margin: 20rpx 24rpx 0;
  padding: 20rpx 0 0 0;
  /* height: 180rpx; */
  height: 268rpx;
  border-bottom: 1rpx solid #d8d8d8;
}
.articleEve>view{
  width: 100%;
  height: 100%;
}
.articleList>view:last-child {
  border-bottom: 0;
}
.articleLfItem{
  width: 100%;
  height: 268rpx;
  float: left;
}
.articleLfItem>view:nth-child(1) {
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
  line-height: 40rpx;
}
.articleLfItem>view:nth-child(2) {
  height: 33rpx;
  font-size: 24rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #999999;
  line-height: 33rpx;
  margin-top: 47rpx;
}

.articleLfItem>view:nth-child(2)>image {
  width: 22rpx;
  height: 22rpx;
  margin-right: 10rpx;
}


.articleLf {
  width: 444rpx;
  height: 268rpx;
  float: left;
  position: relative;
}

.articleLf>view:nth-child(1) {
  padding-left: 16rpx;
  box-sizing: border-box;
  width: 444rpx;
  max-height: 80rpx;
  font-size: 28rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
  line-height: 40rpx;
}
.articleLf>view:nth-child(2),.articleLf>view:nth-child(3){
  padding-left: 16rpx;
  box-sizing: border-box;
  width: 444rpx;
  /* height: 80rpx; */
  max-height: 80rpx;
  font-size: 28rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #666666;
  line-height: 40rpx;
}
.articleLf>view:nth-child(3){
  height: 40rpx;
}
.articleLf>view:nth-child(4) {
  height: 33rpx;
  font-size: 24rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #999999;
  line-height: 33rpx;
  /* margin-top: 47rpx; */
  position: absolute;
  bottom: 20rpx;
  left: 0;
  /* left: 16rpx; */
}

.articleLf>view:nth-child(4)>image {
  width: 22rpx;
  height: 22rpx;
  margin-right: 10rpx;
  margin-left: 16rpx;
}

.articleEve>view>image {
  float: left;
  width: 218rpx;
  height: 248rpx;
  /* height: 160rpx; */
  margin-left: 20rpx;
}

/* 行业信息后补 */
.articleList {
  color: #999999 !important;
  font-size: 24rpx !important;
}

.bgImg {
  width: 508rpx;
  height: 264rpx;
  opacity: 0.7;
  margin: 105rpx 97rpx 24rpx;
}

.loginTitle {
  width: 100%;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
  line-height: 40rpx;
  text-align: center;
  display: block;

}

.gologinBtn {
  width: 490rpx;
  height: 80rpx;
  background: linear-gradient(90deg, #0e4090, #1890ff);
  border-radius: 50rpx;
  font-size: 38rpx;
  margin: 50rpx 106rpx 0;
  color: #ffffff;
  text-align: center;
  line-height: 80rpx;
}



.articleList::after{
  clear: both;
  content: '';
}