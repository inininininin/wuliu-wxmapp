		<text class="type2title">货物类型</text>
		<text class="type2Detail lineOne">{{orderDetail.huoWuLeiXingName||''}}</text>
	</view>
	<view class="type2 ">
		<text class="type2title">货物类型详情</text>
		<text class="type2Detail">{{orderDetail.huoWuLeiXingDetail||''}}</text>
